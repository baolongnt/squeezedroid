<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >

    <TextView android:id="@+id/artist_label"
              android:layout_height="17dip" android:textSize="14dip"
              android:layout_width="fill_parent" android:gravity="center"
              android:textColor="@color/text_color"
            />
    <TextView android:id="@+id/title_label"
              android:layout_height="22dip" android:textSize="15dip"
              android:layout_width="fill_parent" android:gravity="center"
              android:padding="1dip"
              android:textColor="@color/text_color"
              android:textStyle="bold"
            />
    <TextView android:id="@+id/album_label"
              android:layout_height="17dip" android:textSize="12dip"
              android:layout_width="fill_parent" android:gravity="center"
            />

</LinearLayout>


