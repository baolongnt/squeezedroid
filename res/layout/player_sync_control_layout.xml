<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="60px">
   <TextView android:id="@+id/player_name_text"
      android:layout_width="fill_parent" android:layout_height="15px"
      android:textSize="12px" android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true" />
   <SeekBar android:id="@+id/volume_seek_bar"
      android:layout_below="@id/player_name_text"
      android:layout_width="250px" android:layout_height="wrap_content"
      android:max="100" android:progress="5"
      style="?android:attr/progressBarStyleHorizontal"
    />
   <ImageButton android:src="@drawable/unsync"
         android:layout_width="40px" android:layout_height="40px"
         android:padding="3px"
         android:scaleType="fitCenter"
         android:layout_alignParentRight="true"
         android:layout_alignBottom="@id/volume_seek_bar"
         android:id="@+id/unsync_button" 
         android:background="@drawable/empty"
         />
</RelativeLayout>
